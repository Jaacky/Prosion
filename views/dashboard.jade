extends layout

block content
	.container-fluid.dashboard-container
		h1 Dashboard
		.row#dashboard-menu
			.col-sm-12
				button.btn.btn-default#newGraph New Graph
				form#createGraphForm(action='/createGraph', method='post')
					input(type='text', id='graphName', name='graphName', placeholder='Graph Name')
					button.btn.btn-default#createGraph(type='submit') Create
		.row#personal-graphs
			.col-sm-12
				h2 Personal Graphs

		.row#group-graphs
			.col-sm-12
				h2 Group Graphs
				div#my_chart


	script(type='text/javascript').
		currentUser = !{user}
		graphs = !{graphs}
		appendGraphButtons('#personal-graphs', graphs);

		$(document).ready(function() {
			$('#newGraph').on('click', function() {
				$('#createGraphForm').css('display', 'block');
			});
		});




