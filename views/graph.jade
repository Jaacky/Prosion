extends layout

block content
	//- Including Dataset class
	script(src='../javascripts/Dataset.js')
	.container-fluid
		h1#graphName= graphName
		button.btn.btn-default#editGraphName(type="button" aria-label="Left Align")
			span.glyphicon.glyphicon-pencil(aria-hidden="true")
		.row
			.col-sm-12
				h2 New value
				form(action='/graph/input', method='post')#graphInputForm
					input(type='text', id='datepicker', name='date' required)
					input(type='number', id='value', name='value', placeholder='Value' required)
					input(type='string', id='id', name='id' value=graphId hidden required)
					button.btn.btn-default(type='submit') Add

		.row.graph-container
			.col-md-12.options-group#graph-time-options
				button.btn.btn-default#graph-year-option Year
				button.btn.btn-default#graph-month-option.active Month
				button.btn.btn-default#graph-week-option Week
			.col-md-12.date
				button.btn.btn-default#backward &lt;
				h3#date
				button.btn.btn-default#forward &gt;
			.col-md-12
				#graph-container

	script(type='text/javascript').
		/* Initialzing date picker */
		var picker = new Pikaday({
			field: document.getElementById('datepicker'),
			format: 'ddd MMM D, YYYY',
			defaultDate: moment().toDate(),
			setDefaultDate: true,
			onSelect: function() {
			console.log(this.getMoment().format('Do MMMM YYYY'));
			}
		});

	script(type='text/javascript').
		/* Initializing Dataset, default setting graph and default date */
		var graph = !{graph}
		var set = new Dataset(graph.data);
		var date = moment();
		var option = $('#graph-time-options > .btn.active').attr('id');
		formatDate('#date', date, 'month');
		Graph('#graph-container', set.getMonthSet(date, true), option);

	script(type='text/javascript').
		/* Document ready */
		$(document).ready(function() {
			// Edit graph name
			$('#editGraphName').on('click', function() {
				$('#graphName').after('<input>');
			});

			// Forward in time
			$('#forward').on('click', function() {
				var option = $('#graph-time-options > .btn.active').attr('id');
				console.log('before: ', date);
				forwardDate('#date', date, option);
				console.log('after: ', date);
				Graph('#graph-container', getDataset(set, date, option), option);
			});

			// Backward in time
			$('#backward').on('click', function() {
				var option = $('#graph-time-options > .btn.active').attr('id');
				console.log('before: ', date);
				backwardDate('#date', date, option);
				console.log('after: ', date);
				Graph('#graph-container', getDataset(set, date, option), option);
			});

			// Time options
			$('#graph-time-options > .btn').on('click', function() {
				var id = $(this).attr('id');
				formatDate('#date', date, id);
				var option = $(this).attr('id');
				Graph('#graph-container', getDataset(set, date, option), option);
				$('#graph-time-options > .btn').removeClass('active');
				$(this).addClass('active');
			});
		});

